<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class=" rounded-3  mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Product Manage</li>
          </ol>
        </nav>
      </div>
    </div>


<div class="container">
    <div class="row mt- pb-5 ">
        <a  class="btn btn-success ml-auto" style="width: 200px"  href="/admin/add-product">Add Product</a>
       
    </div>
<table class="table mt-5 pt-2" id="productsTable">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">category</th>
      <th scope="col">Image</th>
      <th>Edit</th>
      <th>Delete</th>     
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">{{@key}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td><img class="card-img-top" style="width: 100px; height:80px" src="/product-images/{{this._id}}1.jpg"
                            alt="Card image cap"></td>
      <td><a class="btn btn-primary" href="/admin/edit-product?id={{this._id}}">Edit</a> </td>
      <td><a class="btn btn-danger" href="/admin/delete-product?id={{this._id}}" onclick="return confirm('Are you sure want to delete {{this.Name}}')">Delete</a> </td>
      
    </tr>
    {{/each}}
   
  </tbody>
</table>
</div>


<script>
$(function () {
  $('#productsTable').DataTable()
})
</script>