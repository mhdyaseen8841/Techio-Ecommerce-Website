<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-6 border-right">
               <form action="/edit-profile" enctype="multipart/form-data" method="POST" >
             <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                 <img src="user-image/{{userDetails._id}}.jpg" class=" mt-5" style="width: 200px; height:auto" id="imgView">
               
            <span class="font-weight-bold">{{username}}</span><span class="text-black-50">{{useremail}}</span><span> </span></div>
             <input type="file" name="Image" class="form-control " onchange="viewImage(event)">
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Edit Details</h4>
                </div>
                <div class="row mt-3">
                     <div class="col-md-12"><label class="labels">UserName</label><input type="text"   name="Name" class="form-control" placeholder="enter new username" value="{{userDetails.Name}}"></div>
                       <div class="col-md-12" style="display: none;"><label class="labels">UserName</label><input type="text"   name="Email" class="form-control hidden" placeholder="enter new username" value="{{userDetails.Email}}"></div>
                        <div class="col-md-12" style="display: none;"><label class="labels">UserName</label><input type="text"   name="Password" class="form-control hidden" placeholder="enter new username" value="{{userDetails.Password}}"></div>
                        
                    <div class="col-md-12"><label class="labels">PhoneNumber</label><input type="text"  name="Mobile" class="form-control" placeholder="enter phone number" value="{{userDetails.Mobile}}"></div>
                    <div class="col-md-12"><label class="labels">Address</label><input type="text"  name="Address" class="form-control" placeholder="enter address" value="{{userDetails.Address}}"></div>
                    <div class="col-md-12"><label class="labels">Pincode</label><input type="text"  name="Pincode" class="form-control" placeholder="pincode" value="{{userDetails.Pincode}}"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Country</label><input type="text" name="Country" class="form-control" placeholder="country" value="{{userDetails.Country}}"></div>
                    <div class="col-md-6"><label class="labels">State/Region</label><input type="text" name="State" class="form-control" value="{{userDetails.State}}" placeholder="state"></div>
                </div>
                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit" >Save Profile</button></div>
                </form>
            </div>
        </div>
       
    </div>
</div>





<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>